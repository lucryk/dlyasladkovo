@model TravelGuide.Models.Attraction

@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" class="img-fluid mb-3" alt="@Model.Name">
        }
    </div>
    <div class="col-md-6">
        <h3>Основная информация</h3>
        <p><strong>Город:</strong> @Model.City.Name</p>
        
        @if (!string.IsNullOrEmpty(Model.WorkingHours))
        {
            <p><strong>Часы работы:</strong> @Model.WorkingHours</p>
        }
        
        @if (Model.EntranceFee.HasValue)
        {
            <p><strong>Стоимость посещения:</strong> @Model.EntranceFee.Value.ToString("C")</p>
        }
        
        <h3 class="mt-4">Описание</h3>
        <p>@Model.Description</p>
        
        <h3 class="mt-4">История</h3>
        <p>@Model.History</p>
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Cities" asp-action="Details" asp-route-id="@Model.CityId" class="btn btn-secondary">Вернуться к городу</a>
</div>
